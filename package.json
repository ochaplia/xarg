{
  "name": "xarg",
  "version": "1.0.8",
  "description": "A small tool for validating arguments in JavaScript",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose --runInBand",
    "test-cov": "jest --verbose --runInBand --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/audiowaves/xarg"
  },
  "keywords": [
    "arguments",
    "assertion",
    "check",
    "tools",
    "type",
    "types",
    "typesafe",
    "utilities",
    "utils",
    "validation",
    "xarg"
  ],
  "homepage": "https://github.com/audiowaves/xarg",
  "author": "Oleh",
  "license": "MIT",
  "devDependencies": {
    "jest": "^27.5.1"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "coverageDirectory": ".coverage",
    "coverageReporters": [
      "lcov"
    ],
    "globals": {
      "NODE_ENV": "test",
      "JEST_USE_BASENAME_FOR_CACHING": false
    },
    "modulePathIgnorePatterns": [
      "node_modules/"
    ],
    "roots": [
      "<rootDir>/lib/",
      "<rootDir>/examples/"
    ],
    "cacheDirectory": "<rootDir>/.jestcache"
  }
}
